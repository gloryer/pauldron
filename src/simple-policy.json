{
    "type": "pauldron:simple-policy",
    "name": "Organizational Policy1",
    "content": {
        "rules": {
            "permittedClients": {
                "name": "Permitted Clients",
                "ifMatch":[
                    {"client_id":"client1"}
                ],
                "decision": {
                    "authorization": "Permit", 
                    "obligations": {
                        "DENY_SCOPES": ["s1"]
                    }
                }
            },
            "deniedClients":{ 
                "name": "Denied Clients",            
                "ifMatch": [
                    {"client_id":"client2", "organization": "org1"}
                ],
                "decision": {
                    "authorization": "Deny", 
                    "obligations": {}
                }
            }
        },
        "default": {
            "authorization": "Indeterminate",
            "obligations": {
                    "UMA_REDIRECT": {
                        "realm": "Upstream UMA Server",
                        "as_uri": "http://localhost:3001/authorization"
                    }
            }
        }
    }
}