{
  "name": "pauldron",
  "version": "0.0.1",
  "description": "UMA/OAuth Server with extensions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojitoholic/pauldron"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=10.5.0",
    "yarn": "^1.7.0"
  },
  "scripts": {
    "build": "./node_modules/.bin/tsc --outDir dist/ && cp src/*.json dist/",
    "start": "node dist/index.js",
    "clean": "rimraf ./dist",
    "lint": "tslint --project tsconfig.json",
    "postinstall": "npm run build",    
    "prepublishOnly": "npm run clean && npm run build && npm run lint && npm run test",
    "test": "mocha --exit --timeout 5000 --recursive --full-trace --require ts-node/register --require source-map-support/register --require dotenv/config \"src/**/*.test.ts\""
  },
  "keywords": [
    "OAth",
    "UMA"
  ],
  "contributors": [
    "Mohammad Jafari <jafarim@gmail.com> (https://github.com/mojitoholic/)"
  ],
  "license": "MIT",
  "bugs": {},
  "dependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.0.5",
    "@types/chai-http": "^3.0.3",
    "@types/debug": "0.0.30",
    "@types/express": "^4.0.39",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.87",
    "@types/mocha": "^2.2.44",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.0.53",
    "@types/object-hash": "^1.1.0",
    "@types/request": "^2.0.8",
    "@types/request-promise": "^4.1.39",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "mocha": "^4.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "body-parser": "^1.18.2",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "morgan": "^1.9.0",
    "object-hash": "^1.2.0",
    "pauldron-policy": "^0.1.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "uuid": "^3.1.0"
  }
}
